@model IEnumerable<magero_store.Models.Product>

@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<div class="container" style="margin-top: 40px;">
    <div class="row mb-4">
        <div class="col text-center">
            <h1 class="display-4">Bienvenido a Magero Store</h1>
            <p class="lead">Tu tienda única para productos increíbles</p>
        </div>
    </div>

    <div class="row my-4">
        <div class="col-md-6 mx-auto text-center">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Comienza a Comprar</h5>
                    <p class="card-text">Explora nuestra colección de productos y encuentra lo que necesitas.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Ver Productos</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><strong>Precio: $@product.Price.ToString("F2")</strong></p>
                        <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="btn btn-primary">Ver Detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>