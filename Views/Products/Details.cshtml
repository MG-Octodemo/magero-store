@using magero_store.Models
@model magero_store.Models.Product

@{
    ViewData["Title"] = Model.Name;
    Layout = "_Layout";
}

<h1>@Model.Name</h1>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" />
    </div>
    
    <div class="col-md-6">
        <h2>Precio: @Model.Price.ToString("C")</h2>
        <p><strong>Descripci√≥n:</strong> @Model.Description</p>
        <p><strong>Color:</strong> <span class="badge bg-secondary">@Model.Color</span></p>
        
        <form asp-action="AddToCart" asp-controller="Cart" method="post" class="mt-3">
            <input type="hidden" name="productId" value="@Model.Id" />
            <div class="input-group mb-3">
                <label for="quantity" class="input-group-text">Cantidad:</label>
                <select name="quantity" id="quantity" class="form-select">
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <button type="submit" class="btn btn-warning">Agregar al Carrito</button>
            </div>
        </form>
        
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
            <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Volver a Productos</a>
        </div>
    </div>
</div>