@model IEnumerable<magero_store.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "_Layout";
}

<h2>Productos</h2>

<div class="form-group mb-3">
    <label for="categoryFilter">Filtrar por Categoría:</label>
    <select id="categoryFilter" class="form-control">
        <option value="">Todas las categorías</option>
        @foreach (var category in ViewBag.Categories)
        {
            <option value="@category">@category</option>
        }
    </select>
</div>

<div id="productList">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">Our Products</h1>
            <form asp-action="Search" asp-controller="Products" method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Search products...">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-md-3">
                <div class="card h-100 product">
                    <div class="card-img-wrapper">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.Description</p>
                        <div class="mt-auto">
                            <p class="price h4 mb-3">$@product.Price.ToString("0.00")</p>
                            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <div class="input-group mb-3">
                                    <select name="quantity" class="form-select">
                                        @for (int i = 1; i <= 10; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                    <button type="submit" class="btn btn-warning">Add to Cart</button>
                                </div>
                            </form>
                            <a href="@Url.Action("Details", "Products", new { id = product.Id })" 
                               class="btn btn-primary w-100">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/products.js"></script>
}