@using magero_store.Models
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
    Layout = "_Layout";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="display-4">Our Products</h1>
        
        <!-- Formulario principal de filtros -->
        <form asp-action="Index" asp-controller="Products" method="get" class="mb-4">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" name="searchTerm" class="form-control" placeholder="Search products..." value="@ViewBag.SearchTerm">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="priceFilter" class="form-select" onchange="this.form.submit()">
                        <option value="">All Prices</option>
                        <option value="low" @(ViewBag.PriceFilter == "low" ? "selected" : "")>Low ($0 - $99.99)</option>
                        <option value="med" @(ViewBag.PriceFilter == "med" ? "selected" : "")>Medium ($100 - $299.99)</option>
                        <option value="high" @(ViewBag.PriceFilter == "high" ? "selected" : "")>High ($300+)</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="button" class="btn btn-secondary w-100" onclick="clearFilters()">Clear Filters</button>
                </div>
            </div>
        </form>
        
        <!-- Formulario de bÃºsqueda SQL (mantener funcionalidad existente) -->
        <form asp-action="Search" asp-controller="Products" method="get" class="mb-2">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" name="searchTerm" class="form-control" placeholder="SQL Search products..." value="@ViewBag.SearchTerm">
                        <button class="btn btn-warning" type="submit">SQL Search</button>
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="priceFilter" class="form-select">
                        <option value="">All Prices</option>
                        <option value="low" @(ViewBag.PriceFilter == "low" ? "selected" : "")>Low ($0 - $99.99)</option>
                        <option value="med" @(ViewBag.PriceFilter == "med" ? "selected" : "")>Medium ($100 - $299.99)</option>
                        <option value="high" @(ViewBag.PriceFilter == "high" ? "selected" : "")>High ($300+)</option>
                    </select>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row g-4">
    @foreach (var product in Model)
    {
        <div class="col-md-3">
            <div class="card h-100 product">
                <div class="card-img-wrapper">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                </div>
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-muted">@product.Description</p>
                    <div class="mt-auto">
                        <p class="price h4 mb-3">$@product.Price.ToString("0.00")</p>
                        <form asp-action="AddToCart" asp-controller="Cart" method="post">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <div class="input-group mb-3">
                                <select name="quantity" class="form-select">
                                    @for (int i = 1; i <= 10; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-warning">Add to Cart</button>
                            </div>
                        </form>
                        <a href="@Url.Action("Details", "Products", new { id = product.Id })" 
                           class="btn btn-primary w-100">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function filterByCategory() {
            var category = document.getElementById('categoryFilter').value;
            window.location.href = '/Products/Index' + (category ? '?category=' + category : '');
        }
        
        function clearFilters() {
            window.location.href = '/Products/Index';
        }
    </script>
}