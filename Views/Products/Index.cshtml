@using magero_store.Models
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
    Layout = "_Layout";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="display-4">Nuestros Productos</h1>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <form asp-action="Search" asp-controller="Products" method="get" class="flex-grow-1 me-3">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Buscar productos...">
                    <button class="btn btn-primary" type="submit">Buscar</button>
                </div>
            </form>
            <a asp-action="Create" class="btn btn-success">Crear Producto</a>
        </div>
    </div>
</div>

<div class="row g-4">
    @foreach (var product in Model)
    {
        <div class="col-md-3">
            <div class="card h-100 product">
                <div class="card-img-wrapper">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                </div>
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-muted">@product.Description</p>
                    <p class="card-text"><strong>Color:</strong> <span class="badge bg-secondary">@product.Color</span></p>
                    <div class="mt-auto">
                        <p class="price h4 mb-3">$@product.Price.ToString("0.00")</p>
                        <form asp-action="AddToCart" asp-controller="Cart" method="post" class="mb-2">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <div class="input-group mb-3">
                                <select name="quantity" class="form-select">
                                    @for (int i = 1; i <= 10; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-warning">Agregar al Carrito</button>
                            </div>
                        </form>
                        <div class="btn-group w-100" role="group">
                            <a href="@Url.Action("Details", "Products", new { id = product.Id })" 
                               class="btn btn-primary">Ver Detalles</a>
                            <a href="@Url.Action("Edit", "Products", new { id = product.Id })" 
                               class="btn btn-outline-secondary">Editar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function filterByCategory() {
            var category = document.getElementById('categoryFilter').value;
            window.location.href = '/Products/Index' + (category ? '?category=' + category : '');
        }
    </script>
}